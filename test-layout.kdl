layout {

    default_tab_template {
        pane size=2 split_direction="vertical" {
            pane size="70%" borderless=true {
                plugin location="zellij:tab-bar"
            }
            pane size="30%" borderless=true {
                plugin location="file:target/wasm32-wasi/debug/zellij-what-time.wasm" {
                    date_format "%Y/%m/%d %a"
                    time_format "%H:%M:%S"
                    log_level "debug"
                    interval_update "1.0"
                }
            }
        }
        children
        pane size=1 borderless=true {
            plugin location="file:target/wasm32-wasi/debug/zellij-what-time.wasm"
        }
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    // new_tab_template doesn't automatically inherit from the default_tab_template
    new_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    tab name="Tab 1" focus=true {
        pane
    }

    tab name="Tab 2" {
        pane
    }

    tab name="Tab 3" {
        pane
    }
}

